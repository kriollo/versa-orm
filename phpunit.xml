<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd" bootstrap="testSQLite/bootstrap.php" colors="true" cacheResult="false">
  <testsuites>
    <testsuite name="VersaORM SQLite Test Suite">
      <directory>./testSQLite</directory>
    </testsuite>
  </testsuites>
  <groups>
    <exclude>
      <group>mysql</group>
      <group>postgresql</group>
    </exclude>
  </groups>
  <source>
    <include>
      <directory suffix=".php">./src</directory>
    </include>
  </source>
</phpunit>
