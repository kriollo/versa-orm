<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="testPostgreSQL/bootstrap.php"
         colors="true"
         cacheResult="false"
         stopOnFailure="false"
         stopOnError="false"
         beStrictAboutTestsThatDoNotTestAnything="true"
         beStrictAboutOutputDuringTests="true"
         beStrictAboutChangesToGlobalState="true">

    <testsuites>
        <!-- Core functionality tests -->
        <testsuite name="Core">
            <file>./testPostgreSQL/VersaORMTest.php</file>
            <file>./testPostgreSQL/VersaModelTest.php</file>
            <file>./testPostgreSQL/QueryBuilderTest.php</file>
        </testsuite>

        <!-- PostgreSQL-specific functionality tests -->
        <testsuite name="PostgreSQL-Specific">
            <file>./testPostgreSQL/PostgreSQLAdvancedSQLTest.php</file>
            <file>./testPostgreSQL/DatabaseSpecificTypesTest.php</file>
            <file>./testPostgreSQL/DDLApiTest.php</file>
        </testsuite>

        <!-- Advanced SQL operations (CTEs, Window Functions, etc.) -->
        <testsuite name="Advanced-SQL">
            <file>./testPostgreSQL/QueryBuilderSubqueriesTest.php</file>
            <file>./testPostgreSQL/QueryBuilderJoinTest.php</file>
            <file>./testPostgreSQL/QueryBuilderBatchTest.php</file>
        </testsuite>

        <!-- Data type and casting tests -->
        <testsuite name="Type-Mapping">
            <file>./testPostgreSQL/AdvancedTypeMappingTest.php</file>
            <file>./testPostgreSQL/StrongTypingTest.php</file>
        </testsuite>

        <!-- Relationship and join tests -->
        <testsuite name="Relationships">
            <file>./testPostgreSQL/RelationshipsTest.php</file>
            <file>./testPostgreSQL/JoinSubDiagnosticTest.php</file>
        </testsuite>

        <!-- Performance and optimization tests -->
        <testsuite name="Performance">
            <file>./testPostgreSQL/CacheTest.php</file>
            <file>./testPostgreSQL/LazyQueryPlannerTest.php</file>
            <file>./testPostgreSQL/StressTest.php</file>
        </testsuite>

        <!-- Security tests -->
        <testsuite name="Security">
            <file>./testPostgreSQL/SecurityTest.php</file>
            <file>./testPostgreSQL/QAHardeningStrongTest.php</file>
        </testsuite>

        <!-- Schema and DDL tests -->
        <testsuite name="Schema">
            <file>./testPostgreSQL/SchemaConsistencyTest.php</file>
            <file>./testPostgreSQL/SchemaValidationTest.php</file>
            <file>./testPostgreSQL/DDLAlterOperationsTest.php</file>
        </testsuite>

        <!-- Transaction tests -->
        <testsuite name="Transactions">
            <file>./testPostgreSQL/TransactionsRollbackTest.php</file>
            <file>./testPostgreSQL/UpsertOperationsTest.php</file>
            <file>./testPostgreSQL/ReplaceIntoTest.php</file>
            <file>./testPostgreSQL/QueryBuilderReplaceAndUpsertTest.php</file>
        </testsuite>

        <!-- Validation tests -->
        <testsuite name="Validation">
            <file>./testPostgreSQL/ValidationTest.php</file>
            <file>./testPostgreSQL/ValidationUnitTest.php</file>
            <file>./testPostgreSQL/ValidationSchemaTest.php</file>
            <file>./testPostgreSQL/AliasValidationTest.php</file>
        </testsuite>

        <!-- Batch operations -->
        <testsuite name="Batch-Operations">
            <file>./testPostgreSQL/BatchOperationsTypedBindTest.php</file>
            <file>./testPostgreSQL/HavingParameterizedTest.php</file>
        </testsuite>

        <!-- Freeze mode tests -->
        <testsuite name="Freeze-Mode">
            <file>./testPostgreSQL/FreezeModeTest.php</file>
        </testsuite>

        <!-- All tests suite -->
        <testsuite name="All">
            <directory>./testPostgreSQL</directory>
        </testsuite>
    </testsuites>

    <!-- Test groups configuration -->
    <groups>
        <include>
            <group>postgresql</group>
            <group>postgres</group>
            <group>core</group>
            <group>advanced</group>
            <group>performance</group>
            <group>security</group>
            <group>arrays</group>
            <group>jsonb</group>
            <group>window-functions</group>
            <group>cte</group>
            <group>uuid</group>
            <group>full-text-search</group>
        </include>
        <exclude>
            <group>mysql</group>
            <group>sqlite</group>
            <group>slow</group>
        </exclude>
    </groups>

    <!-- Code coverage configuration -->
    <coverage includeUncoveredFiles="true"
              ignoreDeprecatedCodeUnits="true"
              disableCodeCoverageIgnore="false">
        <report>
            <html outputDirectory="./tests/reports/coverage/postgresql/html" lowUpperBound="50" highLowerBound="95"/>
            <xml outputDirectory="./tests/reports/coverage/postgresql/xml"/>
            <clover outputFile="./tests/reports/coverage/postgresql/clover.xml"/>
            <text outputFile="./tests/reports/coverage/postgresql/coverage.txt" showUncoveredFiles="true"/>
            <cobertura outputFile="./tests/reports/coverage/postgresql/cobertura.xml"/>
        </report>
    </coverage>

    <!-- Source code configuration -->
    <source>
        <include>
            <directory suffix=".php">./src</directory>
        </include>
        <exclude>
            <directory>./src/binary</directory>
            <file>./src/Console/deprecated.php</file>
        </exclude>
    </source>

    <!-- Logging configuration -->
    <logging>
        <junit outputFile="./tests/reports/postgresql/junit.xml"/>
        <teamcity outputFile="./tests/reports/postgresql/teamcity.txt"/>
        <testdoxHtml outputFile="./tests/reports/postgresql/testdox.html"/>
        <testdoxText outputFile="./tests/reports/postgresql/testdox.txt"/>
    </logging>

    <!-- PHP configuration -->
    <php>
        <env name="DB_ENGINE" value="postgresql"/>
        <env name="PHPUNIT_RUNNING" value="1"/>
        <env name="TEST_ENVIRONMENT" value="testing"/>
        <ini name="memory_limit" value="512M"/>
        <ini name="error_reporting" value="E_ALL"/>
        <ini name="display_errors" value="1"/>
        <ini name="display_startup_errors" value="1"/>
    </php>
</phpunit>
