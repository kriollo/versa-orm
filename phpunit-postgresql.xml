    <!-- Source code configuration -->
    <source>
        <include>
            <directory suffix=".php">./src</directory>
        </include>
        <exclude>
            <directory>./src/binary</directory>
            <file>./src/Console/deprecated.php</file>
        </exclude>
    </source>

    <!-- Logging configuration -->
    <logging>
        <junit outputFile="./tests/reports/postgresql/junit.xml"/>
        <teamcity outputFile="./tests/reports/postgresql/teamcity.txt"/>
        <testdoxHtml outputFile="./tests/reports/postgresql/testdox.html"/>
        <testdoxText outputFile="./tests/reports/postgresql/testdox.txt"/>
    </logging>

    <!-- PHP configuration -->
    <php>
        <env name="DB_ENGINE" value="postgresql"/>
        <env name="PHPUNIT_RUNNING" value="1"/>
        <env name="TEST_ENVIRONMENT" value="testing"/>
        <ini name="memory_limit" value="512M"/>
        <ini name="error_reporting" value="E_ALL"/>
        <ini name="display_errors" value="1"/>
        <ini name="display_startup_errors" value="1"/>
    </php>
</phpunit>
