<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="testPostgreSQL/bootstrap.php"
         colors="true"
         cacheResult="false">
    <testsuites>
        <testsuite name="VersaORM PostgreSQL Test Suite">
            <directory>./testPostgreSQL</directory>
        </testsuite>
    </testsuites>
        <groups>
            <exclude>
                <group>mysql</group>
                <group>sqlite</group>
            </exclude>
        </groups>
    <source>
        <include>
            <directory suffix=".php">./src</directory>
        </include>
    </source>
</phpunit>
