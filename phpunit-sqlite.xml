<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="testSQLite/bootstrap.php"
         colors="true"
         cacheResult="false"
         stopOnFailure="false"
         stopOnError="false"
         beStrictAboutTestsThatDoNotTestAnything="true"
         beStrictAboutOutputDuringTests="true"
         beStrictAboutChangesToGlobalState="true">

    <testsuites>
        <!-- Core functionality tests -->
        <testsuite name="Core">
            <file>./testSQLite/QueryBuilderTest.php</file>
        </testsuite>

        <!-- SQLite-specific functionality and limitations -->
        <testsuite name="SQLite-Specific">
            <file>./testSQLite/ReplaceIntoTest.php</file>
            <file>./testSQLite/UpsertOperationsTest.php</file>
        </testsuite>

        <!-- Advanced SQL operations (with SQLite limitations) -->
        <testsuite name="Advanced-SQL">
            <file>./testSQLite/QueryBuilderSubqueriesTest.php</file>
        </testsuite>

        <!-- Data type and casting tests -->
        <testsuite name="Type-Mapping">
            <file>./testSQLite/StrongTypingTest.php</file>
        </testsuite>

        <!-- Performance and optimization tests -->
        <testsuite name="Performance">
            <file>./testSQLite/MetricsTest.php</file>
        </testsuite>

        <!-- Security tests -->
        <testsuite name="Security">
            <file>./testSQLite/SecurityTest.php</file>
        </testsuite>

        <!-- Schema and DDL tests (with SQLite limitations) -->
        <testsuite name="Schema">
            <file>./testSQLite/SchemaConsistencyTest.php</file>
        </testsuite>

        <!-- Transaction tests -->
        <testsuite name="Transactions">
            <file>./testSQLite/TransactionsRollbackTest.php</file>
        </testsuite>

        <!-- Batch operations -->
        <testsuite name="Batch-Operations">
            <file>./testSQLite/BatchOperationsTypedBindTest.php</file>
            <file>./testSQLite/HavingParameterizedTest.php</file>
        </testsuite>

        <!-- All tests suite -->
        <testsuite name="All">
            <directory>./testSQLite</directory>
        </testsuite>
    </testsuites>

    <!-- Test groups configuration -->
    <groups>
        <include>
            <group>sqlite</group>
            <group>core</group>
            <group>performance</group>
            <group>security</group>
            <group>limitations</group>
            <group>workarounds</group>
            <group>file-based</group>
            <group>in-memory</group>
        </include>
        <exclude>
            <group>mysql</group>
            <group>postgresql</group>
            <group>postgres</group>
            <group>slow</group>
            <!-- Exclude features not supported by SQLite -->
            <group>fulltext</group>
            <group>arrays</group>
            <group>jsonb</group>
            <group>window-functions</group>
            <group>cte</group>
            <group>uuid</group>
            <group>storage-engines</group>
        </exclude>
    </groups>

    <!-- Code coverage configuration -->
    <coverage includeUncoveredFiles="true"
              ignoreDeprecatedCodeUnits="true"
              disableCodeCoverageIgnore="false">
        <report>
            <html outputDirectory="./tests/reports/coverage/sqlite/html" lowUpperBound="50" highLowerBound="90"/>
            <xml outputDirectory="./tests/reports/coverage/sqlite/xml"/>
            <clover outputFile="./tests/reports/coverage/sqlite/clover.xml"/>
            <text outputFile="./tests/reports/coverage/sqlite/coverage.txt" showUncoveredFiles="true"/>
        </report>
    </coverage>

    <!-- Logging configuration -->
    <logging>
        <junit outputFile="./tests/reports/sqlite/junit.xml"/>
        <teamcity outputFile="./tests/reports/sqlite/teamcity.txt"/>
        <testdoxHtml outputFile="./tests/reports/sqlite/testdox.html"/>
        <testdoxText outputFile="./tests/reports/sqlite/testdox.txt"/>
    </logging>

    <!-- PHP configuration -->
    <php>
        <env name="DB_ENGINE" value="sqlite"/>
        <env name="PHPUNIT_RUNNING" value="1"/>
        <env name="TEST_ENVIRONMENT" value="testing"/>
        <env name="SQLITE_LIMITATIONS_AWARE" value="1"/>
        <ini name="memory_limit" value="256M"/>
        <ini name="error_reporting" value="E_ALL"/>
        <ini name="display_errors" value="1"/>
        <ini name="display_startup_errors" value="1"/>
    </php>
</phpunit>
