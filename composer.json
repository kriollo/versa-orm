{
  "name": "versaorm/versaorm-php",
  "description": "ORM de alto rendimiento para PHP con núcleo en Rust - Tipado correcto, ultra rápido, seguro por diseño",
  "type": "library",
  "keywords": [
    "orm",
    "database",
    "mysql",
    "postgresql",
    "sqlite",
    "rust",
    "performance",
    "query-builder",
    "redbean",
    "eloquent"
  ],
  "homepage": "https://github.com/kriollo/versa-orm",
  "license": "MIT",
  "authors": [
    {
      "name": "Jorge Jara",
      "email": "jjara@wys.cl",
      "homepage": "https://github.com/kriollo"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "ext-json": "*",
    "symfony/console": "^5.4|^6.0|^7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.85",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.0",
    "psalm/plugin-phpunit": "*",
    "psalm/plugin-symfony": "*",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^6.5",
    "weirdan/doctrine-psalm-plugin": "*"
  },
  "suggest": {
    "ext-mbstring": "Para un mejor manejo de cadenas UTF-8"
  },
  "autoload": {
    "psr-4": {
      "VersaORM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "VersaORM\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "analyse": "phpstan analyse src --level=8 --memory-limit=1G",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "post-install-cmd": [
      "@php -r \"if (file_exists('versaorm_cli/target/release/versaorm_cli') || file_exists('versaorm_cli/target/release/versaorm_cli.exe')) { echo 'VersaORM binary found.\\n'; } else { echo 'Warning: VersaORM binary not found. Please compile it with: cd versaorm_cli && cargo build --release\\n'; }\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/kriollo/versa-orm/issues",
    "source": "https://github.com/kriollo/versa-orm",
    "docs": "https://docs.versaorm.dev"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/kriollo"
    }
  ]
}
