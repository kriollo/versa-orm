{
  "name": "versaorm/versaorm-php",
  "description": "ORM ligero y seguro para PHP (modo PDO por defecto) - Query Builder fluido, Active Record simple, preparado para n√∫cleo nativo opcional",
  "type": "library",
  "keywords": [
    "orm",
    "database",
    "mysql",
    "postgresql",
    "sqlite",
    "rust",
    "performance",
    "query-builder",
    "redbean",
    "eloquent",
    "versaorm",
    "versaWYS",
    "versaORM",
    "kriollo"
  ],
  "homepage": "https://github.com/kriollo/versa-orm",
  "license": "MIT",
  "authors": [
    {
      "name": "Jorge Jara",
      "email": "jjara@wys.cl",
      "homepage": "https://github.com/kriollo"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.85",
    "laradumps/laradumps-core": "3.0",
    "laravel/pint": "^1.20",
    "phpstan/phpstan": "^2.1.22",
    "phpstan/phpstan-strict-rules": "^2.0.6",
    "phpunit/phpunit": "^10.5.53",
    "psalm/plugin-phpunit": "^0.19.0",
    "rector/rector": "^2.1.4",
    "vimeo/psalm": "^6.13.1"
  },
  "suggest": {
    "ext-mbstring": "Para un mejor manejo de cadenas UTF-8"
  },
  "autoload": {
    "psr-4": {
      "VersaORM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "VersaORM\\Tests\\": "tests/",
      "VersaORM\\Tests\\Unit\\": "tests/unit/",
      "VersaORM\\Tests\\PostgreSQL\\": "testPostgreSQL/",
      "VersaORM\\Tests\\SQLite\\": "testSQLite/",
      "App\\Models\\": "example/models/"
    }
  },
  "scripts": {
    "test-mysql": [
      "@putenv XDEBUG_MODE=off",
      "@putenv DB_DRIVER=mysql",
      "@putenv DB_HOST=localhost",
      "@putenv DB_PORT=3306",
      "@putenv DB_NAME=versaorm_test",
      "@putenv DB_USER=local",
      "@putenv DB_PASS=local",
      "phpunit --configuration phpunit-mysql.xml --testdox"
    ],
    "test-postgresql": [
      "@putenv XDEBUG_MODE=off",
      "@putenv DB_DRIVER=postgresql",
      "@putenv DB_HOST=localhost",
      "@putenv DB_PORT=5432",
      "@putenv DB_NAME=versaorm_test",
      "@putenv DB_USER=local",
      "@putenv DB_PASS=local",
      "phpunit --configuration phpunit-postgresql.xml --testdox"
    ],
    "test-sqlite": [
      "@putenv XDEBUG_MODE=off",
      "@putenv DB_DRIVER=sqlite",
      "@putenv DB_NAME=:memory:",
      "phpunit --configuration phpunit-sqlite.xml --testdox"
    ],
    "test-all": [
      "@test-sqlite",
      "@test-mysql",
      "@test-postgresql"
    ],
    "test-coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "@putenv DB_DRIVER=sqlite",
      "@putenv DB_NAME=:memory:",
      "@php -r \"if (!is_dir('build/logs')) { mkdir('build/logs', 0755, true); }\"",
      "phpunit --configuration phpunit-sqlite.xml --coverage-clover build/logs/clover.xml --testdox"
    ],
    "psalm-check": "psalm --no-cache --show-info=true",
    "analyse": "phpstan analyse src --level=8 --memory-limit=1G",
    "php-cs-fix": "php-cs-fixer fix --ansi --config=.php-cs-fixer.dist.php",
    "qa": "php qa-integration.php",
    "qa-fix": "php qa-integration.php --fix",
    "qa-full": "php tests/bin/qa-runner.php full",
    "qa-unit": "php tests/bin/qa-runner.php unit",
    "qa-quality": "php tests/bin/qa-runner.php quality",
    "qa-benchmarks": "php tests/bin/qa-runner.php benchmarks",
    "post-install-cmd": [
      "@php -r \"if (file_exists('versaorm_cli/target/release/versaorm_cli') || file_exists('versaorm_cli/target/release/versaorm_cli.exe')) { echo 'VersaORM binary found.\\n'; } else { echo 'Warning: VersaORM binary not found. Please compile it with: cd versaorm_cli && cargo build --release\\n'; }\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "support": {
    "issues": "https://github.com/kriollo/versa-orm/issues",
    "source": "https://github.com/kriollo/versa-orm",
    "docs": "https://docs.versaorm.dev"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/kriollo"
    }
  ]
}
